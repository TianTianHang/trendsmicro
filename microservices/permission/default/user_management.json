{
    "service_name": "user_management",
    "permissions":[
        {
            "path": "/register",
            "required_permission": ["public"]
        },
        {
            "path": "/token",
            "required_permission": ["public"]
        },
        {
            "path": "/users/me",
            "required_permission": ["user", "admin","guest"]
        },
        {
            "path": "/users",
            "required_permission": ["admin"]
        },
        {
            "path": "/verify-token",
            "required_permission": ["public"]
        },
        {
            "path": "/roles/create",
            "required_permission": ["admin"]
        },
        {
            "path": "/roles",
            "required_permission": ["admin"]
        },
        {
            "path": "/users/{user_id}/roles/assign",
            "required_permission": ["admin"]
        },
        {
            "path": "/users/{user_id}/roles/list",
            "required_permission": ["admin"]
        },
        {
            "path":"/users/change_password",
            "required_permission":["public"]
        }
    ]
}
